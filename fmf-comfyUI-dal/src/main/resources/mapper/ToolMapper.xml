<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fmf.fmf.comfyUI.dal.mapper.ToolMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fmf.fmf.comfyUI.dal.entity.Tool">
        <result column="id" property="id"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="tool_type" property="toolType"/>
        <result column="tool_name" property="toolName"/>
        <result column="version" property="version"/>
    </resultMap>

    <sql id="table">
        tool
    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        select
        *
        from
        <include refid="table"/>
        where is_deleted = 0
    </select>

    <insert id="insert" parameterType="com.fmf.fmf.comfyUI.dal.entity.Tool">
        insert into
        <include refid="table"/>
        (tool_type,tool_name,version)
        values
        (#{toolType}, #{toolName}, #{version})
    </insert>

    <update id="update" parameterType="com.fmf.fmf.comfyUI.dal.entity.Tool">
        update
        <include refid="table" />
        set updated_at = now()
        <if test="toolType != null">
            , tool_type = #{toolType}
        </if>
        <if test="toolName != null">
            , tool_name = #{toolName}
        </if>
        <if test="version != null">
            , version = #{version}
        </if>
        where id = #{id}
    </update>

</mapper>
