<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fmf.fmf.comfyUI.dal.mapper.ToolTemplateMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fmf.fmf.comfyUI.dal.entity.ToolTemplate">
        <result column="id" property="id"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="tool_type" property="toolType"/>
        <result column="version" property="version"/>
        <result column="template_content" property="templateContent"/>
    </resultMap>

    <sql id="table">
        tool_template
    </sql>

    <select id="findByTool" resultMap="BaseResultMap">
        select *
        from
        <include refid="table"/>
        where tool_type = #{toolType} and version = #{version} and is_deleted = 0
    </select>

    <insert id="insert" parameterType="com.fmf.fmf.comfyUI.dal.entity.ToolTemplate">
        insert into
        <include refid="table"/>
        (tool_type,version,template_content)
        values
        (#{toolType}, #{version}, #{templateContent})
    </insert>

    <update id="update" parameterType="com.fmf.fmf.comfyUI.dal.entity.ToolTemplate">
        update
        <include refid="table" />
        set template_content = #{templateContent}
        where tool_type = #{toolType} and version = #{version}
    </update>

</mapper>
