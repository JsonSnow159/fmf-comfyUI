<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fmf.fmf.comfyUI.dal.mapper.ToolConfigMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fmf.fmf.comfyUI.dal.entity.ToolConfig">
        <result column="id" property="id"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="tool_type" property="toolType"/>
        <result column="version" property="version"/>
        <result column="class_id" property="classId"/>
        <result column="class_type" property="classType"/>
        <result column="param_name" property="paramName"/>
        <result column="param_type" property="paramType"/>
    </resultMap>

    <sql id="table">
        tool
    </sql>

    <select id="findByTool" resultMap="BaseResultMap">
        select *
        from
        <include refid="table"/>
        where tool_type = #{toolType} and version = #{version} and is_deleted = 0
    </select>

    <insert id="insert" parameterType="com.fmf.fmf.comfyUI.dal.entity.Tool">
        insert into
        <include refid="table"/>
        (tool_type,version,class_id,class_type,param_name,param_type)
        values
        (#{toolType}, #{version}, #{classId}, #{classType},#{paramName},#{paramType})
    </insert>

    <update id="update" parameterType="com.fmf.fmf.comfyUI.dal.entity.Tool">
        update
        <include refid="table" />
        set updated_at = now()
        <if test="classId != null">
            , class_id = #{classId}
        </if>
        <if test="classType != null">
            , class_type = #{classType}
        </if>
        <if test="paramName != null">
            , param_name = #{paramName}
        </if>
        <if test="paramType != null">
            , param_type = #{paramType}
        </if>
        where tool_type = #{toolType} and version = #{version}
    </update>

</mapper>
